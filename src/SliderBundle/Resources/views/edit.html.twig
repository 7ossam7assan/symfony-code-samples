{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-content">

        <div class="page-head">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>الاسليدر</h1>
            </div>
            <!-- END PAGE TITLE -->
        </div>
        <!-- END PAGE HEAD-->
        <!-- BEGIN PAGE BREADCRUMB -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="#">الرئيسيه</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="{{ path('slider_index') }}">الاسليدر</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span class="active">تعديل</span>
            </li>
        </ul>
        <!-- END PAGE BREADCRUMB -->


        <div class="row">
            <div class="col-md-12">

                <div>
                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-plus"></i> تعديل </div>
                            <div class="tools">
                            </div>
                        </div>
                        <div class="portlet-body form">
                            <!-- BEGIN FORM-->
                            <form action="{{ path('slider_update',{"id":slider.id}) }}" enctype="multipart/form-data" method="post" class="form-horizontal">
                                <div class="form-body">
                                    {#<h3 class="form-section">Person Info</h3>#}
                                    <input type="hidden" name="_method" value="PUT">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">العنوان</label>
                                                <div class="col-md-9">
                                                    <input type="text" id="title" name="title" value="{{ slider.title }}" class="form-control" placeholder="العنوان">
                                                    {#<span class="help-block"> This is inline help </span>#}
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="control-label col-md-2">التفاصيل</label>
                                                <div class="col-md-9">
                                                 <textarea class="wysihtml5 form-control"  style="text-align: right;" rows="6" placeholder="الوصف" name="description">
                                                {{ slider.description }}
                                                 </textarea>
                                                </div>
                                            </div>
                                        </div>

                                    </div>


                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="control-label col-md-2">الصوره<span class="required"> * </span></label>

                                                <div class="col-md-9">
                                                    <div>
                                                        <div class="fileinput fileinput-new" data-provides="fileinput">

                                                            <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;"> </div>

                                                            <div>
                                                                <span class="help-block"> image size 1000px X 400px </span>


                                                                <span class="btn red btn-outline btn-file">

                                                    <span class="fileinput-new"> اختر الصوره </span>


                                                    <span class="fileinput-exists"> تغير </span>

                                                    <input type="file" name="photo">
                                                </span>

                                                                <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> حذف </a>


                                                            </div>

                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                                <div class="thumbnail">
                                    <img src="{{ asset('uploads/Sliders/'~slider.photo~'') | imagine_filter('slider_thumb') }}">
                                </div>

                                <div class="form-actions">

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="col-md-offset-3 col-md-9">
                                                    <button type="submit" class="btn green">حفظ</button>
                                                    <button type="button" class="btn default">إلغاء</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6"> </div>
                                    </div>
                                </div>
                            </form>
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>
        </div>



    </div>


    {% if errors is defined and errors|length > 0 %}
        {% for error in errors %}
            <p>{{ error }}</p>
        {% endfor %}
    {% endif %}



{% endblock %}

{% block page_plugin %}
    <!-- BEGIN PAGE LEVEL PLUGINS -->

    <script src="{{  asset('assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js') }}" type="text/javascript"></script>
    <script src="{{  asset('assets/global/plugins/bootstrap-wysihtml5/wysihtml5-0.3.0.js') }}" type="text/javascript"></script>
    <script src="{{  asset('assets/global/plugins/bootstrap-wysihtml5/bootstrap-wysihtml5.js') }}" type="text/javascript"></script>
    <script src="{{  asset('assets/global/plugins/bootstrap-markdown/js/bootstrap-markdown.js') }}" type="text/javascript"></script>
    <script src="{{  asset('assets/global/plugins/bootstrap-summernote/summernote.min.js') }}" type="text/javascript"></script>

    <!-- END PAGE LEVEL PLUGINS -->
{% endblock %}


{% block page_script %}
    <!-- BEGIN PAGE LEVEL SCRIPTS -->

    <script src="{{  asset('assets/pages/scripts/components-editors.min.js') }}" type="text/javascript"></script>
    <script src="{{  asset('assets/pages/scripts/form-samples.min.js')}}" type="text/javascript"></script>


    <!-- END PAGE LEVEL SCRIPTS -->


{% endblock %}


{%  block page_plugin_css %}
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href="{{  asset('assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{  asset('assets/global/plugins/bootstrap-wysihtml5/bootstrap-wysihtml5-rtl.css') }}" rel="stylesheet" type="text/css" />

    <link href="{{  asset('assets/global/plugins/bootstrap-markdown/css/bootstrap-markdown.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{  asset('assets/global/plugins/bootstrap-summernote/summernote.css" rel="stylesheet" type="text/css') }}" />

    <!-- END PAGE LEVEL PLUGINS -->
{%  endblock %}
