{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-content">

        <div class="page-head">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>الاسليدر</h1>
            </div>
            <!-- END PAGE TITLE -->
        </div>
        <!-- END PAGE HEAD-->
        <!-- BEGIN PAGE BREADCRUMB -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="#">الرئيسيه</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="{{ path('slider_index') }}">الاسليدر</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span class="active">عرض</span>
            </li>
        </ul>
        <!-- END PAGE BREADCRUMB -->


        <div class="row">
            <div class="col-md-12">

                <div>
                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-check"></i> عرض  </div>
                            <div class="tools">
                            </div>
                        </div>
                        <div class="portlet-body form">
                            <!-- BEGIN FORM-->
                            <form action="#" enctype="multipart/form-data" method="post" class="form-horizontal">
                                <div class="form-body">
                                    {#<h3 class="form-section">Person Info</h3>#}
                                    <input type="hidden" name="_method" value="PUT">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">العنوان</label>
                                                <div class="col-md-9">
                                                    <input type="text" id="title" name="title" value="{{ slider.title }}" class="form-control" placeholder="العنوان" readonly>
                                                    {#<span class="help-block"> This is inline help </span>#}
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="control-label col-md-2">التفاصيل</label>
                                                <div class="col-md-9">
                                                 <textarea class="wysihtml5 form-control"  rows="6" placeholder="الوصف" name="description" readonly>
                                                {{ slider.description }}
                                                 </textarea>
                                                </div>
                                            </div>
                                        </div>

                                    </div>


                                    <div class="row">
                                        <div class="col-md-12">
                                           {#// ToDO show image after eng mallah confirmation about the way#}
                                        </div>

                                    </div>

                                </div>
                            </form>
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>
        </div>



    </div>


{% endblock %}

