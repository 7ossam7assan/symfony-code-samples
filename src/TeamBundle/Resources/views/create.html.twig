{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-content">

        <div class="page-head">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>الفرق</h1>
            </div>
            <!-- END PAGE TITLE -->
        </div>
        <!-- END PAGE HEAD-->
        <!-- BEGIN PAGE BREADCRUMB -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="#">الرئيسيه</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="{{ path('team_index') }}">الفرق</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span class="active">اضافة جديد</span>
            </li>
        </ul>
        <!-- END PAGE BREADCRUMB -->


        <div class="row">
            <div class="col-md-12">

                <div>
                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-plus"></i> إضافه جديد  </div>
                            <div class="tools">
                            </div>
                        </div>
                        <div class="portlet-body form">
                            <!-- BEGIN FORM-->
                            <form id="project_form" action="{{ path('team_new') }}" method="post" enctype="multipart/form-data" class="form-horizontal">
                                <div class="form-body">
                                    <div class="alert alert-danger display-hide">
                                        <button class="close" data-close="alert"></button> You have some form errors. Please check below.
                                    </div>
                                    <div class="alert alert-success display-hide">
                                        <button class="close" data-close="alert"></button> Your form validation is successful!
                                    </div>
                                    {#<h3 class="form-section">Person Info</h3>#}


                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">العنوان  <span class="required"> * </span></label>

                                                <div class="col-md-9">
                                                    <input type="text" onkeyup="slugify(this,'slug')"  data-required="1"  id="title" name="title" class="form-control" placeholder="العنوان">
                                                    {#<span class="help-block"> This is inline help </span>#}


                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">العنوان الوظيفى <span class="required"> * </span></label>

                                                <div class="col-md-9">
                                                    <input type="text" data-required="1"  id="job_title" name="job_title" class="form-control" placeholder=" العنوان الوظيفى">
                                                    {#<span class="help-block"> This is inline help </span>#}


                                                </div>
                                            </div>
                                        </div>

                                    </div>


                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3"> المكان<span class="required"> * </span></label>

                                                <div class="col-md-9">
                                                    <input type="text" data-required="1"  id="place" name="place" class="form-control" placeholder="المكان">
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3"> البريد الالكترونى<span class="required"> * </span></label>

                                                <div class="col-md-9">
                                                    <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-envelope"></i>
                                                    </span>
                                                        <input type="text" name="email" class="form-control" placeholder=" البريد الالكترونى">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3"> رقم الهاتف<span class="required"> * </span></label>

                                                <div class="col-md-9">
                                                    <input type="text" data-required="1"   id="phone" name="phone" class="form-control" placeholder="رقم الهاتف">
                                                </div>
                                            </div>
                                        </div>

                                    </div>



                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">Slug <span class="required"> * </span></label>

                                                <div class="col-md-9">
                                                    <input type="text" data-required="1"  id="slug" name="slug" class="form-control" placeholder="Slug">
                                                    {#<span class="help-block"> This is inline help </span>#}

                                                </div>
                                            </div>
                                        </div>

                                    </div>



                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3"> الصوره</label>


                                                <div class="col-md-9">
                                                    <div>
                                                        <div class="fileinput fileinput-new" data-provides="fileinput">

                                                            <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;"> </div>

                                                            <div>
                                                                <span class="help-block"> image size 200px X 200px </span>

                                                                <span class="btn red btn-outline btn-file">

                                                    <span class="fileinput-new"> اختر الصوره </span>


                                                    <span class="fileinput-exists"> تغير </span>

                                                    <input type="file" name="photo">
                                                </span>

                                                                <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> حذف </a>


                                                            </div>

                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="control-label col-md-2">الوصف</label>
                                                <div class="col-md-9">
                                                 <textarea class="wysihtml5 form-control" style="text-align: right;"  rows="6" placeholder="الوصف" name="description">
                                                 </textarea>
                                                </div>
                                            </div>
                                        </div>

                                    </div>



                                    <h3 class="form-section">روابط شبكات التواصل الاجتماعى</h3>

                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">فيسبوك </label>

                                                <div class="col-md-9">
                                                    <input type="text" data-required="1"  id="fb_link" name="fb-link" class="form-control" placeholder="رابط الفيس بوك">
                                                    {#<span class="help-block"> This is inline help </span>#}

                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">تويتر </label>

                                                <div class="col-md-9">
                                                    <input type="text" data-required="1"  id="twitter-link" name="twitter-link" class="form-control" placeholder="رابط تويتر">
                                                    {#<span class="help-block"> This is inline help </span>#}

                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">انستجرام </label>

                                                <div class="col-md-9">
                                                    <input type="text" data-required="1"  id="instagram-link" name="instagram-link" class="form-control" placeholder="رابط انستجرام">
                                                    {#<span class="help-block"> This is inline help </span>#}

                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">يوتيوب </label>

                                                <div class="col-md-9">
                                                    <input type="text" data-required="1"  id="youtube-link" name="youtube-link" class="form-control" placeholder="رابط يوتيوب">
                                                    {#<span class="help-block"> This is inline help </span>#}

                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">سكايب </label>

                                                <div class="col-md-9">
                                                    <input type="text" data-required="1"  id="skype-link" name="skype-link" class="form-control" placeholder="رابط سكايب">
                                                    {#<span class="help-block"> This is inline help </span>#}

                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <h3 class="form-section">SEO</h3>

                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">Meta Title</label>
                                                <div class="col-md-9">
                                                    <input type="text" onkeyup="countChar(this,'metaTitle')" data-required="1"  id="meta_title" name="meta_title" class="form-control" placeholder="Meta Title">
                                                    <span class="help-block" id="metaTitle">  </span>


                                                </div>
                                            </div>
                                        </div>

                                    </div>


                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">Meta Keywords</label>
                                                <div class="col-md-9">
                                                    {#<input type="text" data-required="1"  id="meta_keywords" name="meta_keywords" class="form-control" placeholder="Meta Keywords">#}
                                                    <input type="text" class="form-control" name="meta_keywords" data-role="tagsinput">

                                                    {#<span class="help-block"> This is inline help </span>#}


                                                </div>
                                            </div>
                                        </div>

                                    </div>


                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="control-label col-md-2">Meta Description</label>
                                                <div class="col-md-9">
                                                 <textarea class="wysihtml5 form-control" style="text-align: right;"  rows="6" placeholder="Meta Description" name="meta_description">
                                                 </textarea>
                                                </div>
                                            </div>
                                        </div>

                                    </div>




                                </div>
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="col-md-offset-3 col-md-9">
                                                    <button type="submit" class="btn green">حفظ</button>
                                                    <button type="button" class="btn default">إلغاء</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6"> </div>
                                    </div>
                                </div>
                            </form>
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>
        </div>



    </div>


{% endblock %}

