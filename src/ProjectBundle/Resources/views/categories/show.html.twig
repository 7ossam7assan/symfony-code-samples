    {% extends 'base.html.twig' %}

{% block body %}
    <div class="page-content">

        <div class="page-head">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>اﻷقسام</h1>
            </div>
            <!-- END PAGE TITLE -->
        </div>
        <!-- END PAGE HEAD-->
        <!-- BEGIN PAGE BREADCRUMB -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="#">الرئيسيه</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="{{ path('category_index') }}">اﻷقسام</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span class="active">عرض</span>
            </li>
        </ul>
        <!-- END PAGE BREADCRUMB -->


        <div class="row">
            <div class="col-md-12">

                <div>
                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-plus"></i> عرض </div>
                            <div class="tools">
                            </div>
                        </div>
                        <div class="portlet-body form">
                            <!-- BEGIN FORM-->
                            <form action="#" enctype="multipart/form-data" method="post" class="form-horizontal">
                                <div class="form-body">
                                    {#<h3 class="form-section">Person Info</h3>#}
                                    <input type="hidden" name="_method" value="PUT">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">العنوان</label>
                                                <div class="col-md-9">
                                                    <input type="text" data-required="1"  id="title" name="title" value="{{ category.title }}" class="form-control" placeholder="العنوان" readonly>
                                                    {#<span class="help-block"> This is inline help </span>#}


                                                </div>
                                            </div>
                                        </div>

                                    </div>



                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">Slug</label>
                                                <div class="col-md-9">
                                                    <input type="text" data-required="1"   name="slug" value="{{ category.slug }}" class="form-control" placeholder="Slug" readonly>
                                                    {#<span class="help-block"> This is inline help </span>#}

                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="control-label col-md-2">التفاصيل</label>
                                                <div class="col-md-9">
                                                 <textarea class="wysihtml5 form-control" style="text-align: right;"  rows="6" placeholder="الوصف" name="description" readonly>
                                                     {{ category.description }}
                                                 </textarea>
                                                </div>
                                            </div>
                                        </div>

                                    </div>




                                    <h3 class="form-section">SEO</h3>


                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">Meta Title</label>
                                                <div class="col-md-9">
                                                    <input type="text" data-required="1"  id="meta_title" name="meta_title" value="{{ category.metaTitle }}" class="form-control" placeholder="Meta Title" readonly>
                                                    {#<span class="help-block"> This is inline help </span>#}


                                                </div>
                                            </div>
                                        </div>

                                    </div>


                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">Meta Keywords</label>
                                                <div class="col-md-9">
                                                    {#<input type="text" data-required="1"  id="meta_keywords" name="meta_keywords" value="{{ category.metaKeywords }}" class="form-control" placeholder="Meta Keywords" readonly>#}
                                                    <input type="text" class="form-control" name="meta_keywords" value="{{ category.metaKeywords }}" data-role="tagsinput" disabled>

                                                    {#<span class="help-block"> This is inline help </span>#}


                                                </div>
                                            </div>
                                        </div>

                                    </div>


                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="control-label col-md-2">Meta Description</label>
                                                <div class="col-md-9">
                                                 <textarea class="wysihtml5 form-control" style="text-align: right;"  rows="6" placeholder="Meta Description" name="meta_description" readonly>
                                                 {{ category.metaDescription }}
                                                 </textarea>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="thumbnail">
                                        <img src="{{ asset('uploads/Projects/Categories'~category.photo~'') | imagine_filter('project_category_thumb') }}">
                                    </div>

                                </div>

                            </form>
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>
        </div>



    </div>




{% endblock %}

