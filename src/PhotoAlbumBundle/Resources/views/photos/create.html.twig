{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-content">

        <div class="page-head">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>معرض الصور</h1>
            </div>
            <!-- END PAGE TITLE -->
        </div>
        <!-- END PAGE HEAD-->
        <!-- BEGIN PAGE BREADCRUMB -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="#">الرئيسيه</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="{{ path('photo_index') }}">معرض الصور</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span class="active">اضافة جديد</span>
            </li>
        </ul>
        <!-- END PAGE BREADCRUMB -->


        <div class="row">
            <div class="col-md-12">

                <div>
                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-plus"></i> إضافه جديد  </div>
                            <div class="tools">
                            </div>
                        </div>
                        <div class="portlet-body form">
                            <!-- BEGIN FORM-->
                            <form id="project_form" action="{{ path('photo_new') }}" method="post" enctype="multipart/form-data" class="form-horizontal">
                                <div class="form-body">
                                    <div class="alert alert-danger display-hide">
                                        <button class="close" data-close="alert"></button> You have some form errors. Please check below.
                                    </div>
                                    <div class="alert alert-success display-hide">
                                        <button class="close" data-close="alert"></button> Your form validation is successful!
                                    </div>
                                    {#<h3 class="form-section">Person Info</h3>#}


                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3"> القسم<span class="required"> * </span></label>

                                                <div class="col-md-9">
                                                    <select name="category" id="select2-multiple" class="form-control select2">

                                                        {% for category in categories %}
                                                            <option value="{{ category.id }}"> {{ category.title }}</option>
                                                        {% endfor %}

                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">العنوان  <span class="required"> * </span></label>

                                                <div class="col-md-9">
                                                    <input type="text" data-required="1"  id="title" name="title" class="form-control" placeholder="العنوان">
                                                    {#<span class="help-block"> This is inline help </span>#}


                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3"> الصوره</label>


                                                <div class="col-md-9">
                                                    <div>
                                                        <div class="fileinput fileinput-new" data-provides="fileinput">

                                                            <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;"> </div>

                                                            <div>
                                                                <span class="help-block"> image size 200px X 200px </span>

                                                                <span class="btn red btn-outline btn-file">

                                                    <span class="fileinput-new"> اختر الصوره </span>


                                                    <span class="fileinput-exists"> تغير </span>

                                                    <input type="file" name="photo">
                                                </span>

                                                                <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> حذف </a>


                                                            </div>

                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                </div>
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="col-md-offset-3 col-md-9">
                                                    <button type="submit" class="btn green">حفظ</button>
                                                    <button type="button" class="btn default">إلغاء</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6"> </div>
                                    </div>
                                </div>
                            </form>
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>
        </div>



    </div>


{% endblock %}

