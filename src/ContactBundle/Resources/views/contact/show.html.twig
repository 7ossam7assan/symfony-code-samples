    {% extends 'base.html.twig' %}

{% block body %}
    <div class="page-content">

        <div class="page-head">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>التواصل</h1>
            </div>
            <!-- END PAGE TITLE -->
        </div>
        <!-- END PAGE HEAD-->
        <!-- BEGIN PAGE BREADCRUMB -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="#">الرئيسيه</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="{{ path('contact_index') }}">التواصل</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span class="active">عرض</span>
            </li>
        </ul>
        <!-- END PAGE BREADCRUMB -->


        <div class="row">
            <div class="col-md-12">

                <div>
                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-plus"></i> عرض </div>
                            <div class="tools">
                            </div>
                        </div>
                        <div class="portlet-body form">
                            <!-- BEGIN FORM-->
                            <form action="#" enctype="multipart/form-data" method="post" class="form-horizontal">
                                <div class="form-body">
                                    {#<h3 class="form-section">Person Info</h3>#}



                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">اﻷسم</label>
                                                <div class="col-md-9">
                                                    <input type="text" data-required="1"  id="name" name="name" value="{{ contact.name }}" class="form-control" placeholder="اﻷسم" readonly>
                                                    {#<span class="help-block"> This is inline help </span>#}


                                                </div>
                                            </div>
                                        </div>

                                    </div>



                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">البريد الالكترونى</label>
                                                <div class="col-md-9">
                                                    <input type="text" data-required="1"   name="email" value="{{ contact.email }}" class="form-control" placeholder="البريد الالكترونى" readonly>
                                                    {#<span class="help-block"> This is inline help </span>#}

                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">الموضوع</label>
                                                <div class="col-md-9">
                                                    <input type="text" data-required="1"  id="subject" name="subject" value="{{ contact.subject }}" class="form-control" placeholder="الموضوع" readonly>
                                                    {#<span class="help-block"> This is inline help </span>#}


                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="control-label col-md-3">الهاتف</label>
                                                <div class="col-md-9">
                                                    <input type="text" data-required="1"  id="phone" name="phone" value="{{ contact.phone }}" class="form-control" placeholder="الهاتف" readonly>
                                                    {#<span class="help-block"> This is inline help </span>#}


                                                </div>
                                            </div>
                                        </div>

                                    </div>




                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="control-label col-md-2">الرساله</label>
                                                <div class="col-md-9">
                                                 <textarea class="wysihtml5 form-control" style="text-align: right;"  rows="6" placeholder="الوصف" name="message" readonly>
                                                     {{ contact.message }}
                                                 </textarea>
                                                </div>
                                            </div>
                                        </div>

                                    </div>



                                </div>

                            </form>
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>
        </div>



    </div>




{% endblock %}

