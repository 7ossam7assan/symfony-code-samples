    {% extends 'base.html.twig' %}

    {% block body %}

        <div class="page-content-wrapper">
            <!-- BEGIN CONTENT BODY -->
            <div class="page-content">
                <!-- BEGIN PAGE HEAD-->
                <div class="page-head">
                    <!-- BEGIN PAGE TITLE -->
                    <div class="page-title">
                        <h1>الاعدادات
                            <small></small>
                        </h1>
                    </div>
                    <!-- END PAGE TITLE -->
                </div>
                <!-- END PAGE HEAD-->
                <!-- BEGIN PAGE BREADCRUMB -->
                <ul class="page-breadcrumb breadcrumb">
                    <li>
                        <a href="index.html">الرئيسية</a>
                        <i class="fa fa-circle"></i>
                    </li>
                    <li>
                        <span class="active"> الاعدادات</span>
                    </li>
                </ul>
                <!-- END PAGE BREADCRUMB -->
                <!-- BEGIN PAGE BASE CONTENT -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="portlet box blue">
                            <div class="portlet-title">
                                <div class="caption">
                                    <i class="fa fa-gear"></i>الاعدادات
                                </div>
                            </div>
                            <div class="portlet-body">
                                <form id="project_form" action="{{ path('config_update') }}" method="post" enctype="multipart/form-data" class="form-horizontal">
                                    <input type="hidden" name="_method" value="PUT">
                                    <div class="form-body">

                                    <div class="tabbable-custom ">

                                        <ul class="nav nav-tabs ">

                                            {% for category in categories %}

                                            <li {% if category.id == 1 %} class="active" {% endif %}>
                                                <a href="#tab_5_{{ category.id}}" data-toggle="tab"> {{ category.displayName }} </a>
                                            </li>
                                            {% endfor %}
                                        </ul>

                                        <div class="tab-content">
                                                {% for category in  categories%}
                                                    <div class="tab-pane {% if category.id == 1 %} active {% endif %}" id="tab_5_{{ category.id }}">

                                                    {% for config in category.config %}

                                                    <div class="row">
                                                        <div class="col-md-8">
                                                            <div class="form-group">
                                                                <label class="control-label col-md-3"> {{  config.displayName }}
                                                                    <span class="required"> * </span>
                                                                </label>

                                                                {% if config.type == 1 %}
                                                                <div class="col-md-9">
                                                                    <input type="text" data-required="1"  id="title" name="{{ config.variable }}" class="form-control" placeholder="{{  config.displayName }}" value="{{ config.value }}">
                                                                </div>
                                                                {% elseif config.type == 2 %}


                                                                    <div class="col-md-9">
                                                                        <div class="thumbnail" style="width: 100px;height: 100px">
                                                                            <img src="{{ asset('uploads/Config/')}}{{ config.value }}">
                                                                        </div>
                                                                        <input type="file" data-required="1"  id="title" name="{{ config.variable }}" value="{{ config.value }}">
                                                                    </div>
                                                                {% elseif config.type == 3 %}
                                                                    <div class="col-md-9">
                                                                        <textarea class=" form-control" name="{{ config.variable }}" placeholder="{{  config.displayName }}">
                                                                            {{ config.value }}
                                                                        </textarea>
                                                                    </div>
                                                                {% elseif config.type == 4 %}
                                                                <div class="col-md-9">
                                                                    <input type="text" data-required="1"  id="title" name="{{ config.variable }}" placeholder="{{  config.displayName }}" value="{{ config.value }}"  class="form-control" data-role="tagsinput">
                                                                </div>
                                                                 {% elseif config.type == 5 %}
                                                                <div class="col-md-9">
                                                                    <input type="tel" data-required="1"  id="title" name="{{ config.variable }}" placeholder="{{  config.displayName }}" value="{{ config.value }}"  class="form-control" >
                                                                </div>
                                                                 {% elseif config.type == 6 %}
                                                                <div class="col-md-9">
                                                                    <input type="email" data-required="1"  id="title" name="{{ config.variable }}" placeholder="{{  config.displayName }}" value="{{ config.value }}"  class="form-control" >
                                                                </div>
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                    </div>

                                                {% endfor %}
                                            </div>
                                                {% endfor %}
                                            {#<div class="tab-pane" id="tab_5_2">#}
                                                {#<p> Howdy, I'm in Section 2. </p>#}
                                                {#<p> Ut wisi enim ad minim veniam, quis nostrud exerci tation ullamcorper#}
                                                    {#suscipit lobortis nisl ut aliquip ex ea commodo consequat. Duis autem vel#}
                                                    {#eum iriure dolor in hendrerit in vulputate velit esse molestie#}
                                                    {#consequat. Ut wisi enim ad minim veniam, quis nostrud exerci tation. </p>#}

                                            {#</div>#}
                                            {#<div class="tab-pane" id="tab_5_3">#}
                                                {#<p> Howdy, I'm in Section 3. </p>#}

                                            {#</div>#}
                                        </div>

                                         <div class="col-md-offset-5 col-md-9">
                                             <button type="submit" class="btn green">تعديل</button>
                                         </div>


                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>


                    </div>

                </div>
                <!-- END PAGE BASE CONTENT -->
            </div>
            <!-- END CONTENT BODY -->
        </div>


    {% endblock %}

